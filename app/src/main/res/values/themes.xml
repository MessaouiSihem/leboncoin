<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LeBonCoinApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/orange</item>
        <item name="colorPrimaryVariant">@color/orange</item>
        <item name="colorOnPrimary">@color/orange</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/grey</item>
        <item name="colorSecondaryVariant">@color/grey</item>
        <item name="colorOnSecondary">@color/grey</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- The splash screen background-->
        <item name="windowSplashScreenBackground">@color/orange</item>

        <!-- Splash app icon -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher_round</item>

        <!-- The theme of the Activity that directly follows the splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.LeBonCoinApp</item>
    </style>
</resources>